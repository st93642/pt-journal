    "step_sequences": [
      {
        "title": "Harvesting words from a portal",
        "steps": [
          {
            "title": "Run CeWL crawl",
            "details": "Set crawl depth and minimum word length to match password policies.",
            "command": "cewl -d 2 -m 6 https://portal.target -w portal.txt"
